@model int
<div class="container row pt-4">
    <div class="col-12 text-center">
        <h1 class="text-primary text-center">Payment Sucessful!</h1>
        Your Order Number is : @Model
        <img src="~/images/cat.jpg" />
    </div>
    <div class="col-12 text-center" style="color:maroon">
        <br />
        Your order has been placed successfully!<br />
        <a asp-area="Admin" asp-controller="Order" asp-action="Details" asp-route-orderId="@Model" 
            class="btn btn-primary">Back to Order Details</a>
    </div>
</div>